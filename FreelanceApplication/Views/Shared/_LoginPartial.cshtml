@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @if (User.IsInRole("freelancer"))
                {
                    @Html.ActionLink("Hello, " + User.Identity.GetUserName() + "!", "Index", "FreelanceDescriptions", routeValues: null, htmlAttributes: new {title = "Manage"})
                }else if (User.IsInRole("user"))
                {
                    @Html.ActionLink("Hello, " + User.Identity.GetUserName() + "!", "Index", "Users", routeValues: null, htmlAttributes: new {title = "Manage"})
                }
              @*  @Html.ActionLink("Hello, " + User.Identity.GetUserName() + "!", "Index", "FreelanceDescriptions", routeValues: null, htmlAttributes: new {title = "Manage"})*@

            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registration", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

